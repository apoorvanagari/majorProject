<% layout("/layouts/boilerplate") -%>
<body>
    <h1>All Listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="anchor-card">
                <div class="card col">
                    
                    <img src="<%=listing.image%>" class="card-img-top card-image" alt="Listing place">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"><b><%= listing.title %></b></p>
                      <p class="card-text">&#x20B9;<%= listing.price ? listing.price.toLocaleString("en-IN") : "0"; %>/night</p>
                    </div>
                  </div>
            </a>
        <% } %> 
    </div>
</body>
