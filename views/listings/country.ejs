<% layout("/layouts/boilerplate") -%>
<body>
    <h3 class="mt-3">Listings in <%= country %></h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(listing of listings) { %>
            <a href="/listings/<%= listing._id %>" class="anchor-card">
                <div class="card col listing-card">
                    
                    <img src="<%=listing.image[0].url%>" class="card-img-top card-image" alt="Listing place">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"><b><%= listing.title %></b></p>
                      <p class="card-text">&#x20B9;<%= listing.price ? listing.price.toLocaleString("en-IN") : "0"; %>/night
                    <i class="tax-info">&nbsp; &nbsp; +18% GST</i></p>
                    </div>
                  </div>
            </a>
        <% } %> 
    </div>
</body>