<% layout("/layouts/boilerplate") -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit place details</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback">Enter Title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea  name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Enter short description</div>
                </div>

                <div class="card col-5  show-card listing-card">
                    Original listing image
                    <img class="card-img-top show-image" src="<%= originalImageUrl %>" alt="">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload new Image(s)</label>
                    <input type="file" name="image" class="form-control" multiple>
                </div>
                <div class="mb-3 col-md-12">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                    <div class="invalid-feedback">Enter price</div>
                </div>

                <div class="mb-3 col-md-12">
              <label for="category" class="form-label">Choose a category</label>
              <select class="form-select form-control border" name="listing[category]" id="category" required>
                <option selected disabled><%= listing.category %></option>
                <option value="islands">islands</option>
                <option value="rooms">rooms</option>
                <option value="iconic-cities">iconic-cities</option>
                <option value="mountains">mountains</option>
                <option value="castles">castles</option>
                <option value="amazing-pools">amazing-pools</option>
                <option value="camping">camping</option>
                <option value="farms">farms</option>
                <option value="arctic-pools">arctic-pools</option>
                <option value="domes">domes</option>
                <option value="boats">boats</option>
              </select>
               <div class="invalid-feedback">Please select a category</div>
            </div>

                <div class="mb-3 col-md-12">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                    <div class="invalid-feedback">Enter the country name</div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                    <div class="invalid-feedback">Enter the location</div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary edit-btn mt-3">Submit</button>
                </div>
            </form>
        </div>
    </div>
    