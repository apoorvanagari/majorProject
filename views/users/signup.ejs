<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">Enter username</label>
              <input type="text" class="form-control" id="username" name="username" placeholder="john-doe" required>
              <div class="invalid-feedback">Looks good</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Enter email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="johndoe@gmail.com" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Enter password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button class="btn btn-primary">SignUp</button>
        </form>
    </div>
</div>